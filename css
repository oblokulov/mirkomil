/* ---- Responsive ------------------------------------------------------ */
/* Tablets & down */
@media (max-width: 900px){
  :root{ --nav-h: 64px; }

  /* show hamburger, convert nav to overlay list */
  .nav-toggle{ display:inline-block; }
  .nav{ display:none; position: fixed; left:0; right:0; top: var(--nav-h);
        background: var(--green-dark); border-bottom:1px solid rgba(255,255,255,.1);
        padding: 10px 20px 14px; z-index:60; }
  .nav.open{ display:grid; gap:8px; }
  .nav a{ line-height: 1; padding: 12px 2px; font-size: 18px; border-bottom:1px solid rgba(255,255,255,.06); }
  .nav a:last-child{ border-bottom:0; }
  .nav a.active{ border-bottom:0; text-decoration:underline; }

  .hero-inner{ grid-template-columns: 1fr; text-align:center; gap:22px; padding: 28px 20px; }
  .hero-photo{ order:-1; margin-bottom:10px; }
}

/* Small phones */
